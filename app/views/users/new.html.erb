<% provide(:title, 'Sign up') %>
<h1>Registre!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, :html => { :multipart => true } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :nom %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :location %>
      <%= f.text_field :location %>
     
      <%= f.label :age %>
      <%= f.number_field :age %>
     
      <%= f.label :poid_en_kg %>
      <%= f.number_field :poid %>

      <%= f.label :taille_en_cm %>
      <%= f.number_field :taille %>

      <%= f.label :meilleur_squat %>
      <%= f.number_field :squatu %>

      <%= f.label :meilleur_développé_couché %>
      <%= f.number_field :devel_couche %>

      <%= f.label :meilleur_soulevé_de_terre %>
      <%= f.number_field :souleve_terre %>

      <%= f.label :mot_de_passe %>
      <%= f.password_field :password %>

      <%= f.label :confirmation_de_mot_de_passe %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :Image_de_profil%>
      <%= f.file_field :avatar %>

      

      <%= f.submit "Créer mon compte", class: "btn btn-large btn-primary" %>
    <% end %>
    

  </div>
</div>