<div class="right controls"><h3><%= link_to "Retour Ã  la liste des forums", forums_path %></h3></div>
<div class="module">
  <div class="module_header">
    <%= @forum.title %>
    <span class="controls right">
      <%= link_to "Nouveau Sujet", new_forum_topic_path(@forum) %>
      <% if current_user.email== "rorymunro@hotmail.com" %>
      <%= link_to "Edit Forum", edit_forum_path(@forum) %>
      <%= link_to "Delete Forum", forum_path(@forum), :confirm => "Are you sure you want to delete this forum?", :method => :delete %>
      <% end %>
    </span>
  </div>
  <div>
    <table>
      <tr class="smaller">
        <th colspan="2" align="left">Sujet</th>
        <th>Reponses</th>
        <th>Vues</th>
        <th class="last_post" align="left">Dernier Post</th>
      </tr>
      <% @forum.topics.each do |topic| %>
      <tr>
        <td class="icon"><%= image_tag topic.user.avatar.url %></td>
        <td class="description">
          <%= link_to topic.title, topic_path(topic) %><br />
          <span class="smaller">by <%= topic.user.name %></span>
        </td>
        <td class="counts smaller"><%= topic.posts.size - 1 %></td>
        <td class="counts smaller"><%= topic.hits %></td>
        <td class="last_post smaller">
          <%= topic.posts.last.created_at %><br />
          by <%= topic.posts.last.user.name %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
